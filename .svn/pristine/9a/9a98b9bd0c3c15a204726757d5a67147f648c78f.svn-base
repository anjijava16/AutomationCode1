            timeZone= propertyReader.readTestData("Singapore_TimeZone");
            addLog("Verify change Time Zone" +timeZone );
            orderSummaryPage = orderSummaryPage.verifyChangedTimeZoneWithCountry(timeZone);
            
            // Change conutry as Canada
