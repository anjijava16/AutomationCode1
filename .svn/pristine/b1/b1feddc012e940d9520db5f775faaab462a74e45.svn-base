            </testng>
        </sequential>
    </macrodef--> 
	

	
	 <macrodef name="run-tests-by-pattern">
        <attribute name="pattern" />
    	<attribute name="module" />
    	<attribute name="browser" />
		
        <sequential>
		
		
		<testng classpath="${test.classpath}:${test.dest}" suitename="@{pattern}"  >
                <xmlfileset dir="${ws.home}/testngsuite/@{module}" includes="@{pattern}.xml" />
            	<sysproperty key="module" value="${module}"/>
            	<sysproperty key="browser" value="${browser}"/>
            	<sysproperty key="env" value="${environment}"/>
				
                <jvmarg value="-Xms256m" />
                <jvmarg value="-Xmx512m" />
                <jvmarg value="-XX:MaxPermSize=512m" />
            </testng>
		
			<xslt in="${ws.home}/test-output/testng-results.xml" style="${ws.home}/testng-results.xsl" out="${ws.home}/Report-${module}-${date}-${time}/index.html" classpathref="classpath_jars"  processor="SaxonLiaison">
  
             <param expression="${basedir}/Report-${module}-${date}-${time}/" name="testNgXslt.outputDir" />
            <param expression="true" name="testNgXslt.sortTestCaseLinks" />
            <param expression="FAIL,SKIP,PASS,CONF,BY_CLASS" name="testNgXslt.testDetailsFilter" />
            <param expression="true" name="testNgXslt.showRuntimeTotals" />   
			<classpath refid="classpath_jars"></classpath>			
        </xslt>
        </sequential>
    </macrodef>

    <target name="setClass">
        <path id="classpath_jars">
            <pathelement path="${basedir}/" />
            <fileset dir="${test.lib}" includes="*.jar" />
        </path>
        <pathconvert pathsep=":" property="test.classpath" refid="classpath_jars" />
    </target>
    
    
    <target name="runAll" depends="compile">
      <testng classpath="${test.classpath}:${test.dest}" suitename="All" outputdir="${test.result}-${module}-${date}-${time}" haltonfailure="true" useDefaultListeners="false" listeners="org.uncommons.reportng.HTMLReporter">
       <xmlfileset dir="${ws.home}/config" includes="TestSuiteEdurekaPOC.xml" />
       <sysproperty key="org.uncommons.reportng.escape-output" value="false" />
       <sysproperty key="org.uncommons.reportng.title" value="My Test Report" />
       <jvmarg value="-Xms256m" />
       <jvmarg value="-Xmx512m" />
       <jvmarg value="-XX:MaxPermSize=512m" />
  </testng>

 </target>
    
</project>

