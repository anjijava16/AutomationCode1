        <sequential>
            <testng classpath="${test.classpath}:${test.dest}" suitename="@{pattern}" outputdir="${test.result}-${module}-${date}-${time}" haltonfailure="false" useDefaultListeners="true" listeners="org.uncommons.reportng.HTMLReporter">
                <xmlfileset dir="${ws.home}/testngsuite/@{module}" includes="@{pattern}.xml" />
                <sysproperty key="org.uncommons.reportng.escape-output" value="false" />
                <sysproperty key="org.uncommons.reportng.title" value="Edureka_Automation" />
